<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rocks.che.elections">

    <!-- FIXME: allowBackup is temporary disabled to suppress warning, also what is action.VIEW/action.MAIN? -->
    <application
        android:name=".helpers.PrefsApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/GameTheme"
        >

        <activity
            android:name=".NewGameActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ChooseCandidateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChangeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PollActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".minigames.CatcherGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".minigames.DucksGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".minigames.HammerGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".minigames.LadderGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".minigames.SnakeGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".minigames.RunnerGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".debate.DebateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EndGameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HighlightsActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>